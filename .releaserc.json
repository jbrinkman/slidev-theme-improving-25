{
  "branches": ["main"],
  "preset": "conventionalcommits",
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "ğŸš€ Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "ğŸ› Bug Fixes",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "âš¡ Performance Improvements",
              "hidden": false
            },
            {
              "type": "revert",
              "section": "âª Reverts",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "ğŸ“š Documentation",
              "hidden": false
            },
            {
              "type": "style",
              "section": "ğŸ’ Styles",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "ğŸ”§ Miscellaneous Chores",
              "hidden": true
            },
            {
              "type": "refactor",
              "section": "ğŸ“¦ Code Refactoring",
              "hidden": true
            },
            {
              "type": "test",
              "section": "ğŸš¨ Tests",
              "hidden": true
            },
            {
              "type": "build",
              "section": "ğŸ›  Build System",
              "hidden": true
            },
            {
              "type": "ci",
              "section": "âš™ï¸ Continuous Integration",
              "hidden": true
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/github",
      {
        "assets": []
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}